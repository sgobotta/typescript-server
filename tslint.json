{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
      "max-line-length": {
        "options": [200]
      },
      "trailing-comma": [ false ],
      "ban-types": [ false ],
      "curly": [ true, "ignore-same-line" ],
      "ordered-imports": [ "any "],
      "no-empty": [ false ],
      "no-consecutive-blank-lines": [true, 2]
    },
    "jsRules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "trailing-comma": [
          true
        ]
    },
    "rulesDirectory": []
}